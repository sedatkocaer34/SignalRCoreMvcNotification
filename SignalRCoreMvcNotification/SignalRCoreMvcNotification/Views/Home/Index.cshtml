@{
    ViewData["Title"] = "Home Page";
}
<script src="~/js/signalr/dist/browser/signalr.js" type="text/javascript"></script>
<script>
    (function setupConnection() {
        var connection = new signalR.HubConnectionBuilder().withUrl("/usershub").build();
        connection.start().catch(err => console.error(err.toString())).then(response => console.log("connected"));
    })();
</script>
<div class="text-center">
    <div class="col-md-12">
        <h3>Online Users</h3>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Larry</td>
                <td>the Bird</td>
            </tr>
        </tbody>
    </table>
</div>
